// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
  "name": "Python 3",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {}
  },
  // Use 'postAttachCommand' to set env variables
  "postAttachCommand": "chmod +x .devcontainer/post-create.sh && source .devcontainer/post-create.sh",
  // // Add recommended secrets
  "secrets": {
    "WORKSHOP_PASSWORD": {
      "description": "Enter workshop password by the instructor"
    }
  },
  "forwardPorts": [
    8501
  ]
}